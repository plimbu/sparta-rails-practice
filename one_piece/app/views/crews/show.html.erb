<%= image_tag("crew_show_text.png", class: "show_crew_text") %>

<%= image_tag("crew_show_image.png", class: "show_image") %>

<div class="show_box">
  <p>
    <strong>Name:</strong>
    <%= @crew.name %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @crew.location %>
  </p>

  <p>
    <strong>Characters:</strong>

      <% @crew.characters.each do |character| %>
        <%= character.name %>,
        <%= character.power %>,
        <%= character.crew.name %>|
      <% end %>

  </p>
</div>

<%= link_to image_tag('edit_text.png', class: "show_edit_text"), edit_crew_path(@crew) %> |
<%= link_to image_tag('back_text.png', class: "show_return_text"), crews_path %>
