<%= image_tag("welcome_text.png") %>

<%= link_to 'Characters', controller: 'characters' %>

<%= link_to 'New Character', new_character_path %>

<%= link_to 'New Crew', new_crew_path %>


<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th colspan="5"></th>
    <th></th>
  </tr>

  <% @crews.each do |crew| %>
    <tr>
      <td><%= crew.name %></td>
      <td><%= crew.location %></td>
      <td><%= link_to 'Show', crew_path(crew) %></td>
      <td><%= link_to 'Edit', edit_crew_path(crew) %></td>
      <td><%= link_to 'Destroy', crew_path(crew),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
