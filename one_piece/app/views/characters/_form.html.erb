<%= form_with model: @character, local: true do |form| %>

<% if @character.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@character.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @character.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="info_box">
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :power %><br>
    <%= form.text_area :power %>
  </p>

  <%= collection_select(:character, :crew_id, Crew.all, :id, :name, options ={:prompt => "-Select a Crew"})%>

  <p>
    <%= form.submit %>
  </p>
</div>

<% end %>
